--recurse=yes
--tag-relative=yes
--fields=+l

-R
--languages=-html,javascript,sql
--fields=+i+a+S+n

--langmap=ruby:
--langdef=rb
--langmap=rb:.rb.rake
--regex-rb=/(^|;)[ \t]*(class|module)[ \t]+([A-Z][[:alnum:]_]+([A-Z][[:alnum:]_]+::)*([A-Z][[:alnum:]_]+))/\5/c,class,constant/
--regex-rb=/(^|;)[ \t]*def ([a-z][[:alnum:]_\.]+)/\2/f,function/
--regex-rb=/(^|;)[ \t]*(named_)?scope\(? *:([[:alnum:]_]+)/\3/f,function,named_scope/

--langdef=coffee
--langmap=coffee:.coffee
--regex-coffee=/\.*controller *\(?[\s]*['|"]([A-Za-z0-9_$]+)["|']/coffee\1/,class/
--regex-coffee=/\.*filter *\(?[\s]*['|"]([A-Za-z0-9_$]+)["|']/coffee\1/,class/
--regex-coffee=/\.*factory *\(?[\s]*['|"]([A-Za-z0-9_$]+)["|']/coffee\1/,class/
--regex-coffee=/\.*service *\(?[\s]*['|"]([A-Za-z0-9_$]+)["|']/coffee\1/,class/
--regex-coffee=/\.*directive *\(?[\s]*['|"]([A-Za-z0-9_$]+)["|']/coffee\1/,class/
--regex-coffee=/\.*component *\(?[\s]*['|"]([A-Za-z0-9_$]+)["|']/coffee\1/,class/
--regex-coffee=/\.*as ([A-Za-z0-9_$]+)["|']/coffee\1/,class/
--regex-coffee=/\.*controllerAs *: *["|']([A-Za-z0-9_$]+)["|']/coffee\1/,class/

--exclude=log
--exclude=db\/
--exclude=.git
--exclude=.svn
--exclude=.hg
--exclude=min
--exclude=vendor
--exclude=\*.min.\*
--exclude=\*.map
--exclude=\*.swp
--exclude=\*.bak
--exclude=\*.pyc
--exclude=\*.class
--exclude=\*.sln
--exclude=\*.Master
--exclude=\*.csproj
--exclude=\*.csproj.user
--exclude=\*.cache
--exclude=\*.dll
--exclude=\*.pdb
--exclude=tags
--exclude=cscope.\*
--exclude=\*.tar.\*
--exclude=node_modules
--exclude=bower_components
--exclude=jquery.*.js
--exclude=jquery-*.js
